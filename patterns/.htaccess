#Кодировка по умолчанию
AddDefaultCharset UTF-8

#Запрет на просмотр директорий
Options -Indexes +FollowSymLinks


<IfModule mod_rewrite.c>

    RewriteEngine On
    RewriteBase /

	#Блокируем все ссылки, содержащие script
    RewriteCond %{QUERY_STRING} (\<|%3C).*script.*(\>|%3E) [NC,OR]
    #Блокируем все скрипты, которые пытаются изменить переменные PHP Globals:
    RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
    #Блокируем все скрипты, которые пытаются изменить переменную _REQUEST:
    RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2})
    #Перенаправляем все подобные на страницу с ошибкой 403 — запрещено
    RewriteRule ^(.*)$ /alls/index.php [F,L]

    #Переадресация адреса каталога без слэша на со слэшом
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_URI} !(.*\..*|.*/)$
    RewriteRule ^/m1-shop/(.*)$ $1/ [R=301,L]


    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} !^/all/web/

    RewriteRule ^(.*)/(.*)/ /all/index.php?controller=$1&method=$2 [L,QSA]
    RewriteRule ^/all/(.*)/(.*) /all/index.php?controller=$1&method=$2 [L,QSA]
    RewriteRule ^/all/(.*)/(.*)/ /all/index.php?controller=$1&method=$2 [L,QSA]
    # RewriteRule ^/all/index.php /all/index.php?controller=blog&method=getList [L,QSA]

</IfModule>